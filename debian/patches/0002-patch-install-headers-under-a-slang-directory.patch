From: John Zupin <johnz@lunarg.com>
Date: Mon, 7 Oct 2024 13:55:13 -0600
Subject: patch: install headers under a slang directory

---
 CMakeLists.txt          | 4 ++--
 cmake/SlangTarget.cmake | 2 +-
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index 6750cb1..e14580e 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -829,8 +829,8 @@ install(DIRECTORY
   DESTINATION share/doc/slang
 )
 install(DIRECTORY
-  "${slang_SOURCE_DIR}/include"
-  DESTINATION .
+  "${slang_SOURCE_DIR}/include/"
+  DESTINATION ${CMAKE_INSTALL_INCLUDEDIR}/slang/
 )
 
 include(CPack)
diff --git a/cmake/SlangTarget.cmake b/cmake/SlangTarget.cmake
index e370a49..965ff2d 100644
--- a/cmake/SlangTarget.cmake
+++ b/cmake/SlangTarget.cmake
@@ -388,7 +388,7 @@ function(slang_add_target dir type)
             ${component_args}
             ${exclude_arg}
             PUBLIC_HEADER
-            DESTINATION ${CMAKE_INSTALL_INCLUDEDIR}
+            DESTINATION ${CMAKE_INSTALL_INCLUDEDIR}/slang/
             ${component_args}
             ${exclude_arg}
         )
